<table BORDER="1">

<%l=@item%>
  <tr>
	<td> class= <%=l.class.name%> </td>
	<td> price category= <%=l.pricecategory%> </td>	
	<% l.attributes.each do |key,value| %> 
	<td> <%= "#{key}=#{value}" %> </td>
	<%end%>

	<% i=0 %>
	<% @TabAssoc.each do |t| %>
	<% if(i==0) ; qq=t.where("media_id=?",l.id); end%>	
	<% if(i==1) ; qq=t.where("book_id=?",l.id); end%>	
	<% qq.each do |q|%>
	<td> CommentId=<%= q.id%> ; Comment : "<%= q.description%>" </td>
	<%end%>
	<% i=i+1%>
	<%end%>	
	
	<td><%= link_to 'Edit', "/#{l.class.name.tableize}/#{l.id}/edit" %></td>
    <td><%= link_to 'Back', "/#{l.class.name.tableize}/" %></td>
  </tr>

</table>